/**
 * Implements OBJECT_load().
 *
 * @see menu_get_item()
 */
function apple_news_export_load($id) {
  module_load_include('inc', 'apple_news');
  list($module, $machine_name) = explode('::', $id);
  return apple_news_get_export($module, $machine_name);
}

/**
 * Implements hook_cron().
