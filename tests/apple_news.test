<?php

/**
 * @file
 * Contains tests for the Apple News module.
 */

use ChapterThree\AppleNewsDoc;

/**
 * Test export to Apple News Format.
 */
class AppleNewsNodeExportTestCase extends DrupalWebTestCase {

  /**
   * Implements getInfo().
   */
  public static function getInfo() {
    return array(
      'name' => t('Export node to Apple News Format'),
      'description' => '',
      'group' => t('Apple News'),
    );
  }

  /**
   * Implements setUp().
   */
  public function setUp() {
    parent::setUp(array('apple_news'));
  }

  /**
   * Test node export.
   */
  public function testExport() {
    $title = $this->randomName(32);
    $body = $this->randomName(64);
    $settings = array(
      'type' => 'page',
      'title' => $title,
      'body' => array(LANGUAGE_NONE => array(array('value' => $body))),
    );
    $node = $this->drupalCreateNode($settings);
    $this->assert($node->nid > 0, 'Node created.');

    $export = new AppleNewsExport('node', $node->nid);

    /** @var ChapterThree\AppleNewsDoc\Document $document */
    $document = $export->export();
    // Documents require a component.
    $document->addComponent(new AppleNewsDoc\Components\Body(''));
    $data = json_decode($document->json());

    // $this->pass(var_export($data, TRUE));
    $this->assertEqual($node->nid, $data->identifier,
      'Export node nid -> identifier.');
    $this->assertEqual($node->title, $data->title,
      'Export node title -> title.');
  }

}
